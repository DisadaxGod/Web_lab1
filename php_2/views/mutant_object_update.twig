{% extends "__layout.twig" %}

{% block content %}
    <h1>Изменение мутантов</h1>
    <hr>

    {% if message %}
        <div class="alert alert-info">
            {{message}}
        </div>
    {% endif %}

    <form action="" enctype="multipart/form-data" method="POST" class="row g-3">
        <div class="col-4">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title" value="{{object.title}}">
        </div>
        <div class="col-4">
            <label class="form-label">Краткое описание</label>
            <input type="text" class="form-control" name="description" value="{{object.description}}">
        </div>
        <div class="col-4">
            <label class="form-label">Тип</label>
            <select class="form-control" name="type">
                {% for type in types %}
                        <option value="{{type.title}}" {% if type.title == object.type %}selected{% endif %}>{{type.title}}</option>
                    {% endfor %}
            </select>
        </div>
        <div class="col-4">
            <a class="ripple" href="/object/{{object.id}}"><img src="{{ object.image }}"
    class=" p-1 img-thumbnail rounded" /></a>
            </div>
            <div class="mb-3">
                <label class="form-label">Выберите картинку</label>
                <input class="form-control" type="file" name="image">
            </div>
        <div class="col-12">
            <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5">{{object.info}}</textarea>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Изменить</button>
        </div>
    </form>

{% endblock %}